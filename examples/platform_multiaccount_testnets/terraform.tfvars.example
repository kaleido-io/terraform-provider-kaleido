# Complete working example for 3-account hub-spoke deployment
# Copy this file to terraform.tfvars and update with your actual values

# Root Account Authentication (from account1)
root_platform_api = "https://account1.kaleido.dev"
root_platform_bearer_token = "eyJhbGciOiJSUzI1NiIs..." # Your Kubernetes service account token

# OAuth Configuration
kaleido_id_client_id = "your_kaleido_id_client_id"
kaleido_id_client_secret = "your_kaleido_id_client_secret"
kaleido_id_config_url = "https://sso-dev.photic.io/api/v1/.well-known/openid-configuration"
first_user_email = "admin@your-company.com"

# Kubernetes Service Account Bootstrap
bootstrap_application_issuer = "https://kubernetes.default.svc.cluster.local"
bootstrap_application_jwks_endpoint = "https://kubernetes.default.svc.cluster.local/openid/v1/jwks"
bootstrap_application_ca_certificate = <<EOF
-----BEGIN CERTIFICATE-----
# Your Kubernetes cluster CA certificate here
-----END CERTIFICATE-----
EOF

# Account Configuration
child_account_count = 3  # Creates node1 (hub), node2 & node3 (spokes)
account_name_prefix = "node"

# Network Configuration
besu_network_name = "testnet"
ipfs_network_name = "filenet"
paladin_network_name = "paladinnet"
chain_id = 12345
block_period_seconds = 5

# Infrastructure Configuration
deployment_zone = "platform-conn"
originator_signer_count = 1
originator_peer_count = 1
gateway_count = 1
paladin_node_size = "Large"

# Connectivity: Full mesh only for Paladin P2P selective disclosure

# Development Settings
enable_force_delete = true

# Initial balances for Besu blockchain
initial_balances = {
  "0x12F62772C4652280d06E64CfBC9033d409559aD4" = "0x111111111111"
}